#!/usr/bin/env bash
sudo sed -i 's/^user .*/user nginx/' /etc/nginx/nginx.conf
sudo sed -i 's/listen 80;/listen 8080/' /etc/nginx/sites-available/default
sudo chmod 644 /etc/nginx/nginx.conf
sudo service nginx restart
ps aux | grep '[n]ginx' | grep 'nginx' > /dev/null || echo "Nginx is not running as nginx user"
sudo netstat -tuln | grep ':8080' > /dev/null || echo "Nginx is not listening on port 8080"
